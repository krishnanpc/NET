            <pool name="Logistic pool" dimX="4" dimY="4" dimZ="4">
              <neuronGroups>
                <neuronGroup name="Exc-Logistic" role="Excitatory" relShare="4">
                  <activationTanH />
                  <bias min="0" max="0"/>
                </neuronGroup>
                <neuronGroup name="Inh-Logistic" role="Inhibitory" relShare="1">
                  <activationTanH />
                  <bias min="0" max="0"/>
                </neuronGroup>
              </neuronGroups>
              <interconnection density="0.1">
                <staticSynapse>
                  <weight min="0" max="1"/>
                </staticSynapse>
              </interconnection>
            </pool>
          </pools>
        </reservoirCfg>
      </reservoirCfgContainer>
      <reservoirInstanceContainer>
        <reservoirInstance name="Main" cfg="MainCfg" augmentedStates="false">
          <inputFieldAssignments>
            <inputFieldAssignment inputFieldName="Adj Close" poolName="Logistic pool" density="1">
              <staticSynapse>
                <weight min="0" max="2" randomSign="false" distribution="Uniform"/>
              </staticSynapse>
            </inputFieldAssignment>
          </inputFieldAssignments>
        </reservoirInstance>
      </reservoirInstanceContainer>
      <readoutLayer testDataRatio="0.1" folds="Auto">
        <readoutUnit attempts="1" attemptEpochs="100">
          <ff regressionMethod="Linear">
            <activationIdentity/>
          </ff>
        </readoutUnit>
        <outputFields>
          <field name="High"/>
          <field name="Low"/>
        </outputFields>
      </readoutLayer>
    </stateMachineCfg>
  </case>


